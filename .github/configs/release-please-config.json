{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "pull-request-title-pattern": "chore: release ${version}",
  "sequential-calls": true,
  "release-search-depth": 500,
  "commit-search-depth": 500,

  "packages": {
    ".": {
      "include-component-in-tag": false,
      "release-type": "go",
      "draft": true,
      "prerelease": false,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "yaml",
          "path": "example/values.yaml",
          "jsonpath": "$.provider.webhook.image.tag"
        }
      ]
    }
  },

  "changelog-sections": [
    {
      "section": "✨ Features",
      "type": "feat"
    },
    {
      "section": "🐛 Fixes",
      "type": "fix"
    },
    {
      "section": "🧰 Maintenance",
      "type": "chore"
    },
    {
      "section": "⏪️ Reverts",
      "type": "revert"
    },
    {
      "section": "⬆️ Dependency updates",
      "type": "deps"
    },
    {
      "section": "📝 Documentation",
      "type": "docs"
    },
    {
      "section": "✅ Tests",
      "type": "test"
    },
    {
      "section": "♻️ Continuous Integraion",
      "type": "ci"
    }
  ]
}